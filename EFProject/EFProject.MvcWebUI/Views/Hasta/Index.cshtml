@model EFProject.MvcWebUI.Models.HastaListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="col-md-12">
        <br />
        <br />
        <center><p class="lead" style="color: red;">@Html.ValidationMessage("FilterException")</p></center>
        <br />
        @Html.ActionLink(" Yeni Kayıt Ekle", "Add", null, new { @class = "btn btn-primary btn-xs fa fa-user-plus" })
        <br />
        <table class="table table-bordered table-condensed table-striped table-hover sortable">
            <thread>
                <tr>
                    <th> TC</th>
                    <th> Ad Soyad</th>
                    <th> Dogum Yılı</th>
                </tr>

            </thread>
            @if (Model == null)
            {
                <tbody>
                <tr>
                    <th colspan="3"></th>
                </tr>
                </tbody>
            }
            else
            {
                foreach (var hasta in Model.HastaKarti)
                {

                    <tbody>
                    <tr>
                        <th>
                            @hasta.TCNo
                        </th>
                        <th>
                            @hasta.Ad_Soyad
                        </th>
                        <th>
                            @hasta.DogumYili
                        </th>
                    </tr>
                    </tbody>
                }
            }
           

        </table>


    </div>
</body>
</html>
